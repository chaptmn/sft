<ul class="form-item">
  <li><%= f.label :name, "名前" %><%= f.text_field :name %> </li>
  <li><%= f.label :name, "email" %><%= f.text_field :email %></li>
  <li><%= f.label :name, "パスワード"  %>  <%= f.password_field :password  %></li>
  <li><%= f.label :name, "パス確認"  %>  <%= f.password_field :password_confirmation %></li>
  <li><%= f.label :name, "学部"%>   <%= f.select :faculty, User.faculties.keys.to_a, {} %></li>
  <li><%= f.label :name, "学科"%>   <%= f.select :department,  User.departments.keys.to_a, {} %></li>
  <li><%= f.label :name, "学年"%>   <%= f.select :year, [1,2,3,4,] %> </li>
  <li class="button-panel"><%= f.submit("登録", class: "button") %></li>
</ul>
