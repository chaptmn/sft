<!DOCTYPE html>
<html>
  <head>
    <title>SftApp</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1"> 
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bottom_fixed">
    </div>
    <%= yield %>
    <footer>
      <ul class="head_menu">
        <li>
          <%= link_to(root_path) do %><%= fa_icon "2x home"%><% end %>
        </li>
        <li>
          <%= link_to(categories_path) do %><%= fa_icon "2x search"%><% end %>
        </li>
        <% if logged_in? %> 
          <li>
            <%= link_to(user_logs_path(current_user.id)) do %><%= fa_icon "2x book"%><% end %>
          </li>
          <li>
            <%= link_to(user_path(session[:user_id])) do %><%= fa_icon "2x user"%><% end %>
          </li>
        <% else %>
          <li>
            <%= link_to(login_path) do %><%= fa_icon "2x book"%><% end %>
          </li>
          <li>
            <%= link_to(login_path) do %><%= fa_icon "2x sign-in"%><% end %>
          </li>
        <% end %>
      </ul>
    </footer>
  </body>
</html>
