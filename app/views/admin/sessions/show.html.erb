<div id="login_modal" class="fadeInDown">
  <div class="form_row id">
  </div>
  <div class="form_row pass">
  </div>
</div>


<div class="form-wrapper">
  <h1>Sign In</h1>
  <%= form_tag admin_sessions_path, remote: true , authenticity_token: true do %>
    <div class="form-item">
      <label for="email"></label>
      <%= text_field 'session', 'email', class: "form_item", placeholder: "email" %>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <%= password_field 'session', 'password', class: "form_item", placeholder: "password" %>
    </div>
    <div class="button-panel">
      <input type="submit" class="button" title="Sign In" value="Sign In"></input>
    </div>
  <% end %>
    <div class="form-footer">
      <p><%= link_to "新規登録", new_user_path%></p>
    </div>
</div>
